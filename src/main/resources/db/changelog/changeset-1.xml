<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="Valentin Karnaukhov" id="1">
        <createSequence sequenceName="company_id_sequence"/>
        <createTable tableName="company">
            <column name="id" type="BIGINT" defaultValueSequenceNext="company_id_sequence">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="uuid" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Valentin Karnaukhov" id="2">
        <createSequence sequenceName="employee_id_sequence"/>
        <createTable tableName="employee">
            <column name="id" type="BIGINT" defaultValueSequenceNext="employee_id_sequence">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="company_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_employee_company_id" references="company(id)"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>